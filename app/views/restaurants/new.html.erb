<h1 class="mb-4">Add a New Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <div class="mb-3">
    <%= f.input :name, label: "Restaurant Name" %>
  </div>

  <div class="mb-3">
    <%= f.input :address, label: "Address" %>
  </div>

  <div class="mb-3">
    <%= f.input :phone_number, label: "Phone Number" %>
  </div>

  <div class="mb-3">
    <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Select a category", label: "Category" %>
  </div>

  <%= f.button :submit, "Create Restaurant", class: "btn btn-primary" %>
<% end %>
