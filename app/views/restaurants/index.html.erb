<h1>All Restaurants</h1>
<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= restaurant.name %>
      <%= link_to "Details", restaurant_path(restaurant), class: "btn btn-primary btn-sm" %>
    </li>
  <% end %>
</ul>
